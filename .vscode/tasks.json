{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build With CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "./build"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Configure With CMake"
            ]
        },
        {
            "label": "Configure With CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S .",
                "-B build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}